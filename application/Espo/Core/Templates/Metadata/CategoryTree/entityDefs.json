            "layoutRelationshipsDisabled": true
        },
        "parent": {
            "type": "belongsTo",
            "foreign": "children",
            "entity": "{entityType}",
            "isCustom": true
        },
        "children": {
            "type": "hasMany",
            "foreign": "parent",
