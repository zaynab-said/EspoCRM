            "columns": [
                "name",
                "deleted"
            ]
        }
    },
    "additionalTables": {
        "{entityType}Path": {
            "fields": {
                "id": {
                    "type": "id",
                    "dbType": "int",
                    "len": "11",
                    "autoincrement": true,
                    "unique" : true
                },
                "ascendorId": {
                    "type": "varchar",
